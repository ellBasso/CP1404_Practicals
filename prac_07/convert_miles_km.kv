BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: miles_input
            text: '34.0'
            font_size: 48
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                font_size: 48
            Button:
                text: 'Down'
                font_size: 48
    Button:
        font_size: 48
        text: 'Convert Miles to Kilometers'
        on_press: app.convert_miles()
    Label:
        id: conversion_label
        text: "54.717"
        color: (1, 1, 0, 1)
        font_size: 48