BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            on_text: app.convert_miles()
            id: miles_input
            text: '34.0'
            font_size: 48
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                on_press: app.handle_increment(+1)
                text: 'Up'
                font_size: 48
            Button:
                on_press: app.handle_increment(-1)
                text: 'Down'
                font_size: 48
    Label:
        id: conversion_label
        text: "54.717"
        color: (1, 1, 0, 1)
        font_size: 48